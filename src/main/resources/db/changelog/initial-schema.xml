<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-city-table" author="ristovljupcho">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="city"/>
            </not>
        </preConditions>
        <createTable tableName="city">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100) NOT NULL"/>
            <column name="lat" type="DECIMAL(8,5) NOT NULL"/>
            <column name="lon" type="DECIMAL(8,5) NOT NULL"/>
        </createTable>
    </changeSet>

    <changeSet id="create-forecast-table" author="ristovljupcho">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="forecast"/>
            </not>
        </preConditions>
        <createTable tableName="forecast">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="forecast_date" type="DATE NOT NULL"/>
            <column name="temp_day" type="DOUBLE NOT NULL"/>
            <column name="weather_main" type="VARCHAR(50) NOT NULL"/>
            <column name="city_id" type="UUID NOT NULL"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="forecast"
                baseColumnNames="city_id"
                referencedTableName="city"
                referencedColumnNames="id"
                constraintName="fk_forecast_city"
                onDelete="RESTRICT"
                onUpdate="RESTRICT"/>
    </changeSet>

</databaseChangeLog>